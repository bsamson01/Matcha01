<% include layouts/header %>

<div class="well well-lg">
  <form action="/auth/reset" method="post" class="center form-horizontal" role="form" style="width: 50%;">
    <div class="row">
      <div class="form-group">
        <label for="email" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" id="email" name="email" placeholder="login@student.42.fr" required=true>
        </div>
    </div>

    <div class="form-group">
      <div class="col-sm-10 col-sm-offset-2">
        <input id="submit" name="submit" type="submit" value="Send new password !" class="btn btn-success" style="float: right;">
      </div>
    </div>
  </form>
</div>

